    function AddLocationList() {

        var html = "";
        html += '<tr><td><input type="hidden" class="LocationId" value="0"/><input type="text" class="form-control SubLocationName" name="Sub_Location_Name" onchange="dup_value(this.value)" /></td>';
        html += '<td><input type="text" class="form-control LocationDescription" name="Location_Description"></td>';
        html += '<td><button type="button" class="btn btn-danger TblDeleteButton">Remove</button></td></tr>';
        $(UI_Fields.ADDMORE_LOCATION_LIST).append(html);
