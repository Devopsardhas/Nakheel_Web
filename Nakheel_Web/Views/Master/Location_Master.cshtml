<script>
    "use strict";
    const UI_Fields = Object.freeze({
        ZONEID: "#Zone_Id",
        COMMUNITY_ID: "#Community_Id",
        MODULE_ID: "#Location_Id",
        ADD_INCIDENT_LIST: "#Add_Incident_List",
        LIST_VIEW: "#List_View",
        BTN_BACK: "#btn_back",
        MAIN_TABLE: "#tblIncident",
        TBODY_TABLE: "#GetIncidentList",
        BTN_ADD_LOC: "#btn_add_location",
        ADDMORE_LOCATION_LIST: "#GetLocationList",
        TBL_EDIT_BUTTON: ".TblEditButton",
        TBL_DELETE_BUTTON: ".TblDeleteButton",
        LOCATION_NAME: "#Location_name",
        LOCATION_DESCRIPTION: "#Description",
        SUB_LOCATION: "#Sub_Location_Name",
        BUILDING_ID:"#Building_Id",
        
    });
    $(document).ready(function () {
        LOAD_ALL_ZONE_IS_COMMUNITY();
        $(UI_Fields.BTN_ADD_LOC).click(function () {
            $(UI_Fields.LIST_VIEW).hide(100);
            $(UI_Fields.ADD_INCIDENT_LIST).show(100);
        });
        $(UI_Fields.BTN_BACK).click(function () {
            $(UI_Fields.LIST_VIEW).show(100);
            $(UI_Fields.ADD_INCIDENT_LIST).hide(100);
        });
        $(UI_Fields.MAIN_TABLE).DataTable({
            "order": [[0, "desc"]],
            "initComplete": function (settings, json) {
                $(UI_Fields.MAIN_TABLE).wrap("<div class='tableFixHead' ></div>");
            },
            dom: 'lBfrtip',
            buttons: ['excel', 'pdf'],
        });
        $("#btnAdd").click(function () {
            $(UI_Fields.MODULE_ID).val('0');
            $(UI_Fields.ZONEID).val('0');
            $(UI_Fields.COMMUNITY_ID).val('');
            $(UI_Fields.BUILDING_ID).val('');
            $(UI_Fields.ZONEID).prop("disabled", false);
            $(UI_Fields.COMMUNITY_ID).prop("disabled", false);
            $(UI_Fields.BUILDING_ID).prop("disabled", false);
            $(UI_Fields.LOCATION_NAME).val('');
            $(UI_Fields.ADDMORE_LOCATION_LIST).html('');
            AddLocationList();
        });
    });
    
</script>
