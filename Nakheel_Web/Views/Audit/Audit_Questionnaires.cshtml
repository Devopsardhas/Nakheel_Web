            $(UI_Fields.AU_AUDITSUB_TOPICS).append("<option selected value='0' style='text-align:center' disabled> --Select--</option>");
            $(data).each(function (i, e) {
                $(UI_Fields.AU_AUDITSUB_TOPICS).append("<option value=" + e.Audit_Sub_Topics_Id + ">" + e.Audit_Sub_Topics_Name + "</option>");
            });
