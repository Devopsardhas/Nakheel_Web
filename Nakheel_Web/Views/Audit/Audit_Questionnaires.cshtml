                $(UI_Fields.GetAuditTopicsList).append(html);
                $(UI_Fields.Submit_Div).show(100);
            }
        });
    }

    function Edit(Cat_Id, Cat_Name) {
        $(UI_Fields.Add_Audit_Questionnaires_Div).show(100);
        $(UI_Fields.List_View_Div).hide(100);
        Category_Id = Cat_Id;
        let Category_Name = Cat_Name;
        if (Category_Id == 1 || Category_Id == 4 || Category_Id == 2) {
            $("#Audit_SubTopics").hide();
        }
        else {
            $("#Audit_SubTopics").show();
        }

        $(UI_Fields.Audit_Category_Id).val(Category_Id);
        $(UI_Fields.Audit_Category_Name).val(Category_Name);
        $(UI_Fields.Audit_Sub_Topics_Id).val(Audit_Sub_Topics_Id);
        $(UI_Fields.Audit_Category_Name).attr('readonly', true);
        $(UI_Fields.GetAuditTopicsList).html('');

        $.post("@Url.Action("Audit_Topics_GetById", "Audit")", { ID: Cat_Id }, function (data) {
            $(UI_Fields.AU_AUDIT_TOPICS).empty();
            $(UI_Fields.AU_AUDIT_TOPICS).append("<option selected value='0' style='text-align:center' disabled> --Select--</option>");
            $(data).each(function (i, e) {
                $(UI_Fields.AU_AUDIT_TOPICS).append("<option value=" + e.Audit_Topics_Id + ">" + e.Audit_Topics_Name + "</option>");
            });
        });
    }

    function AddMasterCommList() {
        debugger
        $(UI_Fields.Submit_Div).show(100);
        var AT = "Audit_Questionnaires_Name" + Count;
        var html = "";
        html += '<tr class="Modified"><td><input type="hidden" class="Audit_Questionnaires_Id" value="0"/><input type="text" class="form-control required Audit_Questionnaires_Name" name="' + AT + '" onchange="duplicate_Community(this.value);"/></td>';
        html += '<td><button type="button" class="btn btn-danger TblDeleteButton">Remove</button></td></tr>';
        $(UI_Fields.GetAuditTopicsList).append(html);
        Count++;
        $("input[name='" + AT + "']").focus();
    }


