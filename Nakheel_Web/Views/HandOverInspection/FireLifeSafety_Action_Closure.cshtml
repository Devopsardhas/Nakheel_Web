@using Microsoft.AspNetCore.Http;
@using Nakheel_Web.Models.AccountsMaster;
@using Newtonsoft.Json;
@using static Nakheel_Web.Authentication.Common;
@inject IHttpContextAccessor HttpContextAccessor;
@{
    var str = HttpContextAccessor.HttpContext!.Session.GetString("Login");
    string Des = Decrypt(str!);
    Login_ LoginClass = JsonConvert.DeserializeObject<Login_>(Des!)!;
}
@{
    ViewData["Title"] = "Fire & Life Safety Action Closure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css" crossorigin="anonymous">
<link href="~/assets/libs/fileupload/fileinput.min.css" rel="stylesheet" />
<script src="~/assets/libs/fileupload/fileinput.min.js"></script>
@model IReadOnlyCollection<Nakheel_Web.Models.HandOverInsMaster.M_Insp_FireLifeSafety_Model>;
<style>
    .Qns {
        --bs-gutter-x: 0px !important;
    }

    .tblround {
        border-collapse: collapse;
        border-radius: 1em;
        overflow: hidden
    }

    .table > :not(caption) > * > * {
        padding: 0.35rem 0.35rem !important;
        background-color: var(--bs-table-bg);
        border-bottom-width: 1px;
        -webkit-box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
        box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
    }
</style>
@*Grid View*@
<div class="row" id="List_View">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-10"> <h4 class="card-title">Fire & Life Safety Action Closure List</h4></div>
                </div>
                <div class="col-lg-2" style="padding:13px"></div>
            </div>
            <div class="card-body">
                <table id="tblFireLifeSafetyActionClosure" class="table table-sm tblround table-striped dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Zone Name</th>
                            <th>Community Name</th>
                            <th>Inspection Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @if (LoginClass.Role_Id == "5" || LoginClass.Role_Id == "15" || LoginClass.Role_Id == "16" || LoginClass.Role_Id == "17")
                    {
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model!)
                                {
                                    <tr class="clstr">
                                        <td align="left" valign="middle" style="display:none;">@item.Insp_Request_Id</td>
                                        <td align="left" valign="middle">@item.Unique_Id</td>
                                        <td align="left" valign="middle">@item.Zone_Name</td>
                                        <td align="left" valign="middle">@item.Community_Name</td>
                                        <td align="left" valign="middle">@item.CreatedDate</td>
                                        @if (item.Status == "Corrective Action Pending")
                                        {
                                            <td align="left" valign="middle"><span class="badge bg-warning">@item.Status</span> </td>
                                            <td align="left">
                                                <div class="d-flex gap-3">
                                                    @if (LoginClass.Role_Id == "5" || LoginClass.Role_Id == "15" || LoginClass.Role_Id == "16" || LoginClass.Role_Id == "17")
                                                    {
                                                        <a onclick="Closure_Edit(@item.Insp_Request_Id)" href="javascript:void(0);" title="Edit" class="text-warning" data-bs-original-title="Edit" aria-label="Edit"> <i class="mdi mdi-pencil font-size-18"></i></a>
                                                    }
                                                    else
                                                    {
                                                        <a onclick="Closure_Edit(@item.Insp_Request_Id)" href="javascript:void(0);" title="Edit" class="text-warning" data-bs-original-title="Edit" aria-label="Edit"> <i class="mdi mdi-eye font-size-18"></i></a>
                                                    }
                                                </div>
                                            </td>
                                        }
                                        @if (item.Status == "Closure Action Pending")
                                        {
                                            <td align="left" valign="middle"><span class="badge bg-info">@item.Status</span> </td>
                                            <td align="left">
                                                <div class="d-flex gap-3">
                                                    <a onclick="Closure_Edit(@item.Insp_Request_Id)" href="javascript:void(0);" title="Edit" class="text-info" data-bs-original-title="Edit" aria-label="View"> <i class="mdi mdi-eye font-size-18"></i></a>
                                                </div>
                                            </td>
                                        }
                                        @if (item.Status == "Completed")
                                        {
                                            <td align="left" valign="middle"><span class="badge bg-success">@item.Status</span> </td>
                                            <td align="left">
                                                <div class="d-flex gap-3">
                                                    <a onclick="Closure_Edit(@item.Insp_Request_Id)" href="javascript:void(0);" title="Review" class="text-success" data-bs-original-title="Edit" aria-label="View"> <i class="mdi mdi-eye font-size-18"></i></a>
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<div id="FireLifeSafety_Closure_View" style="display:none">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-10"> <h4 class="card-title">View Fire & Life Safety Closure</h4></div>
                    <div class="col-lg-2">
                        <button type="button" id="btn_ViewInspback_Ev" class="btn btn-success waves-effect waves-light" style="float: right;"><i class="mdi mdi-arrow-left-thin-circle-outline me-1"></i>Back</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="ViewFireLifeSafetyList_Closure">
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    "use strict";
    const UI_Fields = Object.freeze({
        List_View_CA_Div: "#List_View",
        Add_Insp_Finding_Closure_Div: "#FireLifeSafety_Closure_View",
        Load_Add_Insp_Finding_Closure_Div: "#ViewFireLifeSafetyList_Closure",
        BACK_BTN: "#btn_ViewInspback_Ev"
    });
    $(document).ready(function () {
        $("#tblFireLifeSafetyActionClosure").DataTable({
            "order": [[0, "desc"]],
            "initComplete": function (settings, json) {
                $("#tblFireLifeSafetyActionClosure").wrap("<div class='tableFixHead' style='overflow:auto;min-height:auto;max-height:430px; width:100%;position:relative;'></div>");
            },
            dom: 'lBfrtip',
            buttons: ['excel', 'pdf', 'colvis'],
        });
    });
    $(UI_Fields.BACK_BTN).on('click', function () {
        $(UI_Fields.List_View_CA_Div).show(100);
        $(UI_Fields.Add_Insp_Finding_Closure_Div).hide(100);
    });
    function Closure_Edit(val) {
        var Hzurl = "";
        $(UI_Fields.List_View_CA_Div).hide(100);
        $(UI_Fields.Add_Insp_Finding_Closure_Div).show(100);
        Hzurl = '/HandOverInspection/_ViewFireLifeSafetyClosureAction';
        Hzurl += '/?Insp_Request_Id=' + val;
        $(UI_Fields.Load_Add_Insp_Finding_Closure_Div).load(Hzurl);
    }
</script>