    function FnActionClosureSubmit(Rowid) {
        //alert(Rowid);
        $('.FnActionClosureSubmitCA').prop('disabled', true);
        var Photo_List = [];
        var varInsp_HndOver_Building_CAId = $("#Insp_HndOver_Building_CAId").val();
        var varCorrective_Action_CAId = "0";
        var trRowid = ".SubAssigntr_" + Rowid;
        var varCorrective_Action_CAId = $(trRowid).closest('tr').find('#Corrective_Action_CAId').val();
        var var_V_Main_UploadPhotos = $(trRowid).closest('tr').find('.UploadPhotos').val();
        var varDescription_Action = $(trRowid).closest('tr').find('.Description_Action').val();
        if (var_V_Main_UploadPhotos != "" && var_V_Main_UploadPhotos != null) {
            Photo_List = [];
            var val_UploadPhotos = var_V_Main_UploadPhotos.split(',');
            var i;
            for (i = 0; i < val_UploadPhotos.length; i++) {
                var x = val_UploadPhotos[i].replace(/[\(\)\[\]{}'"]/g, "");
                if (x != "/") {
                    var Pdata = {};
                    Pdata.Photo_File_Path = x;
                    Pdata.Bldg_Photo_Id = "0";
                    Pdata.Insp_HndOver_Building_Id = varInsp_HndOver_Building_CAId;
                    Photo_List.push(Pdata);
                }
            }
        }
        var ObjHO = {};
        ObjHO.Description_Action = varDescription_Action;
        ObjHO.Corrective_Action_Id = varCorrective_Action_CAId;
        ObjHO.Insp_HndOver_Building_Id = varInsp_HndOver_Building_CAId;
        ObjHO.L_Insp_HndOver_Photos = Photo_List;

        $.ajax({
            url: "/HandOverInspection/AddHandOver_Closure_Action",
            type: "POST",
            cache: false,
            data: JSON.stringify(ObjHO),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data == "200") {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Updated Successfully',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(function () {
                        $('.FnActionClosureSubmit').prop('disabled', false);
                        Fn_Add_Action_Closure(varInsp_HndOver_Building_CAId);
                    });
                }
                else {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'Error',
                        title: 'Error',
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            },
        });
    }
    function Fn_Add_Action_Closure(id) {
        //alert(id);
        $("#List_View").hide(100);
        $("#HandOver_Closure_View").show(100);
        $.post("@Url.Action("_ViewHandOver_Closure", "HandOverInspection")", { Insp_HndOver_Building_Id: id }, function (data) {
            $("#ViewHandOverList_Closure").html('');
            $("#ViewHandOverList_Closure").html(data);
        }).always(function () {
            $("#HandOver_Closure_View").show(100);
            $(".FnActionClosureSubmitCA").hide(100);
        });
    }
