@using Microsoft.AspNetCore.Http;
@using Nakheel_Web.Models.AccountsMaster;
@using Newtonsoft.Json;
@using static Nakheel_Web.Authentication.Common;
@inject IHttpContextAccessor HttpContextAccessor;
@{
    var str = HttpContextAccessor.HttpContext!.Session.GetString("Login");
    string Des = Decrypt(str!);
    Login_ LoginClass = JsonConvert.DeserializeObject<Login_>(Des!)!;
}

@{
    ViewData["Title"] = "HandOver Action Closure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css" crossorigin="anonymous">
<link href="~/assets/libs/fileupload/fileinput.min.css" rel="stylesheet" />
<script src="~/assets/libs/fileupload/fileinput.min.js"></script>

@model IReadOnlyCollection<Nakheel_Web.Models.HandOverInsMaster.M_Insp_HndOver_Assign_Action>;
<style>
    .Qns {
        --bs-gutter-x: 0px !important;
    }
</style>
<style>
    .tblround {
        border-collapse: collapse;
        border-radius: 1em;
        overflow: hidden
    }

    .table > :not(caption) > * > * {
        padding: 0.35rem 0.35rem !important;
        background-color: var(--bs-table-bg);
        border-bottom-width: 1px;
        -webkit-box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
        box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
    }
</style>
@*Grid View*@
<div class="row" id="List_View">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-10"> <h4 class="card-title">HandOver Action Closure List</h4></div>
                    <div class="col-lg-2" style="display:none;">
                        <button type="button" id="btn_add_Handover" class="btn btn-success waves-effect waves-light" style="float: right;"><i class="mdi mdi-plus me-1"></i> Add Handover</button>
                    </div>
                    <div class="col-lg-2" style="padding:13px"></div>
                </div>
            </div>
            <div class="card-body">
                <table id="tblHndOverActionClosure" class="table table-sm table-striped dt-responsive nowrap tblround" style="width:100%">
                    <thead>
                        <tr>
                            <th>HandOver ID</th>
                            <th>Responsible Name</th>
                            <th>HandOver Type</th>
                            <th>Date of Audit</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @if (LoginClass.Role_Id == "7" || LoginClass.Role_Id == "15" || LoginClass.Role_Id == "16" || LoginClass.Role_Id == "17")
                    {
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="clstr">
                                        <td align="left" valign="middle" style="display:none;">@item.Insp_HndOver_Building_Id</td>
                                        <td align="left" valign="middle">@item.Unique_Id</td>
                                        <td align="left" valign="middle">@item.Responsible_Name</td>
                                        <td align="left" valign="middle">@item.HandOver_Type</td>
                                        <td align="left" valign="middle">@item.CreatedDate</td>
                                        @if (item.Description_Action == "Action Closure Pending")
                                        {
                                            <td align="left" valign="middle"><span class="badge bg-warning">@item.Description_Action</span> </td>
                                            <td align="left">
                                                <div class="d-flex gap-3">
                                                    @if (LoginClass.Role_Id == "5")
                                                    {
                                                        <a onclick="Closure_Edit(@item.Insp_HndOver_Building_Id, @item.Corrective_Action_Id)" href="javascript:void(0);" title="Edit" class="text-warning" data-bs-original-title="Edit" aria-label="Edit"> <i class="mdi mdi-eye font-size-18"></i></a>
                                                    }
                                                    else 
                                                    {
                                                        <a onclick="Closure_Edit(@item.Insp_HndOver_Building_Id, @item.Corrective_Action_Id)" href="javascript:void(0);" title="Edit" class="text-warning" data-bs-original-title="Edit" aria-label="Edit"> <i class="mdi mdi-pencil font-size-18"></i></a>
                                                    }
                                                </div>
                                            </td>
                                        }
                                        @if (item.Description_Action == "Completed")
                                        {
                                            <td align="left" valign="middle"><span class="badge bg-success">@item.Description_Action</span> </td>
                                            <td align="left">
                                                <div class="d-flex gap-3">
                                                    <a onclick="Closure_View(@item.Insp_HndOver_Building_Id,@item.Corrective_Action_Id)" href="javascript:void(0);" title="Review" class="text-success" data-bs-original-title="Edit" aria-label="View"> <i class="mdi mdi-eye font-size-18"></i></a>
                                                </div>
                                            </td>
                                        }
                                        @if (item.Description_Action == "Rejected")
                                        {
                                            <td align="left" valign="middle"><span class="badge bg-danger">@item.Description_Action</span> </td>
                                            <td align="left">
                                                <div class="d-flex gap-3">
                                                    @if (LoginClass.Role_Id == "7" || LoginClass.Role_Id == "15" || LoginClass.Role_Id == "16" || LoginClass.Role_Id == "17")
                                                    {
                                                        <a onclick="Obs_Closure_Edit(@item.Insp_HndOver_Building_Id, @item.Corrective_Action_Id)" href="javascript:void(0);" title="Edit" class="text-success" data-bs-original-title="Edit" aria-label="View"> <i class="mdi mdi-reload font-size-18"></i></a>
                                                    }
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<div id="HandOver_Closure_View" style="display:none">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-10"> <h4 class="card-title">View HandOver Closure</h4></div>
                    <div class="col-lg-2">
                        <button type="button" id="btn_ViewIncback_Ev" class="btn btn-success waves-effect waves-light" style="float: right;"><i class="mdi mdi-arrow-left-thin-circle-outline me-1"></i>Back</button>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @*<div id="ViewHandOverList_Report">
                </div>
                <div id="ViewHandOverList_Qns">
                </div>*@
                <div id="ViewHandOverList_Closure">
                </div>

                @*@if (Model != null)
                {
                    @if (LoginClass.Role_Id == "9" || LoginClass.Role_Id == "10" || LoginClass.Role_Id == "11")
                    {
                        <div class="" id="btnNotReassign">
                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="button" class="btn btn-success waves-effect waves-light submit_CA" style="float: right;cursor:pointer">
                                        <i class="bx bx-check-double font-size-16 align-middle me-2"></i> Approval
                                    </button>
                                </div>
                                <div class="col-lg-6">
                                    <button type="button" class="btn btn-danger waves-effect waves-light submit_Reject" data-bs-toggle="modal" id="btnadd" data-bs-target=".add-new" style="cursor:pointer">
                                        <i class="bx bx-check-double font-size-16 align-middle me-2"></i> Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }*@
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#tblHndOverActionClosure").DataTable({
            "order": [[0, "desc"]],
            "initComplete": function (settings, json) {
                $("#tblHndOverActionClosure").wrap("<div class='tableFixHead' style='overflow:auto;min-height:auto;max-height:430px; width:100%;position:relative;'></div>");
            },
            dom: 'lBfrtip',
            buttons: ['excel', 'pdf', 'colvis'],
        });
    });
</script>
<script>
    $("#btn_ViewIncback_Ev").on('click', function () {
        $("#List_View").show(100);
        $("#HandOver_Closure_View").hide(100);
    });
    function Closure_Edit(val,Corrective_Action_Id) {
        //alert(val);
        debugger;
        //$("#Inc_Observation_Id").val(val);
        //$("#Obs_Corrective_Action_Id").val(Obs_Corrective_Action_Id);
        //$("#Responsible_Id").val(Responsible_Id);
        $("#List_View").hide(100);
        $("#HandOver_Closure_View").show(100);
        Hzurl = '/HandOverInspection/_ViewHandOverBuilding';
        Hzurl += '/?Insp_HndOver_Building_Id=' + val;
