    function FnActionClosureSubmit(Rowid) {
        //alert(Rowid);
        $('.FnActionClosureSubmitCA').attr('disabled', true);
        //debugger
        var Photo_List = [];
        var RowDesc = "#Action_Taken_" + Rowid + "-error";
        var varInsp_ServiceProvider_Id = $("#Insp_ServiceProvider_CAId").val();
        var varCorrective_Action_Id = "0";
        var trRowid = ".SubAssigntr_" + Rowid;
        var varCorrective_Action_Id = $(trRowid).closest('tr').find('#Corrective_Action_CAId').val();
        var varResponsible_Type_Name = $(trRowid).closest('tr').find('#Responsible_Type_Name').val();
        var var_V_Main_UploadPhotos = $(trRowid).closest('tr').find('.UploadPhotos').val();
        var varAction_Taken = $(trRowid).closest('tr').find('.Action_Taken').val();
        if (varAction_Taken == "") {
            $(RowDesc).text("This field is required");
            $('.FnActionClosureSubmitCA').prop('disabled', false);
            return false;
        }
        if (var_V_Main_UploadPhotos != "" && var_V_Main_UploadPhotos != null) {
            Photo_List = [];
            var val_UploadPhotos = var_V_Main_UploadPhotos.split(',');
            var i;
            for (i = 0; i < val_UploadPhotos.length; i++) {
                var x = val_UploadPhotos[i].replace(/[\(\)\[\]{}'"]/g, "");
                if (x != "/") {
                    var Pdata = {};
                    Pdata.Photo_File_Path = x;
                    Pdata.Sp_Photo_Id = "0";
                    Pdata.Corrective_Action_Id = varCorrective_Action_Id;
                    Pdata.Insp_ServiceProvider_Id = varInsp_ServiceProvider_Id;
                    Photo_List.push(Pdata);
                }
            }
        }
        var ObjSp = {};
        ObjSp.Action_Taken = varAction_Taken;
        ObjSp.Corrective_Action_Id = varCorrective_Action_Id;
        ObjSp.Insp_ServiceProvider_Id = varInsp_ServiceProvider_Id;
        ObjSp.Responsible_Name = varResponsible_Type_Name;
        ObjSp.L_M_Insp_ServiceProvider_Photos = Photo_List;
        $.ajax({
            url: "/HandOverInspection/ServiceProvider_Closure_Action_Add",
            type: "POST",
            cache: false,
            data: JSON.stringify(ObjSp),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data == "200") {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Updated Successfully',
                        showConfirmButton: false,
                        timer: 1500
                    }).then(function () {
                        $('.FnActionClosureSubmit').attr('disabled', false);
                        Fn_Add_Action_Closure_CA(varInsp_ServiceProvider_Id);
                    });
                }
                else {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'Error',
                        title: 'Error',
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            },
        });
    }
